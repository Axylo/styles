  <locale xml:lang="de">
    <terms>
      <term name="et-al">u.a.</term>
      <term name="and">und</term>
      <term name="retrieved">zugegriffen am</term>
      <term name="accessed">Zugriff:</term>
      <term name="ibid">ebenda</term>
      <term name="page" form="short">
        <single>S.</single>
        <multiple>S.</multiple>
      </term>
      <term name="section" form="short">
        <single>Abs.</single>
        <multiple>Abs.</multiple>
      </term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author">
      <name delimiter="/" delimiter-precedes-last="never" name-as-sort-order="all"/>
      <label form="short" suffix=")" prefix=" ("/>
      <substitute>
        <names variable="editor"/>
        <text variable="title"/>
      </substitute>
    </names>
    <text macro="anon"/>
  </macro>
  <macro name="author-short">
    <names variable="author" delimiter="/">
      <name form="short" delimiter="/" delimiter-precedes-last="never" et-al-min="3" et-al-use-first="1" initialize-with=". " sort-separator=","/>
      <substitute>
        <names variable="editor"/>
        <text variable="title"/>
      </substitute>
    </names>
    <text macro="anon"/>
  </macro>
  <macro name="editor">
    <names variable="editor" delimiter="/ ">
      <name delimiter="/" delimiter-precedes-last="never" name-as-sort-order="all"/>
      <label form="short" suffix=")" prefix=" ("/>
    </names>
  </macro>
  <macro name="anon">
    <choose>
      <if match="none" variable="author editor translator">
        <text form="short" suffix=" " term="anonymous" strip-periods="true"/>
      </if>
    </choose>
  </macro>
  <macro name="accessed">
    <date variable="accessed" prefix=" ">
      <date-part name="day" form="numeric-leading-zeros" suffix="."/>
      <date-part name="month" form="numeric-leading-zeros" suffix="."/>
      <date-part name="year" form="long"/>
    </date>
  </macro>
  <macro name="date">
    <choose>
      <if variable="issued">
        <date variable="issued">
          <date-part name="day" form="numeric" suffix="."/>
          <date-part name="month" form="numeric" suffix="."/>
          <date-part name="year" form="long"/>
        </date>
      </if>
      <else>
        <date variable="accessed">
          <date-part name="day" form="numeric" suffix="."/>
          <date-part name="month" form="numeric" suffix="."/>
          <date-part name="year" form="long"/>
        </date>
      </else>
    </choose>
  </macro>
  <macro name="year-date">
    <choose>
      <if type="webpage">
        <choose>
          <if variable="issued">
            <date variable="issued">
              <date-part name="year"/>
            </date>
          </if>
          <else>
            <date variable="accessed">
              <date-part name="year"/>
            </date>
          </else>
        </choose>
      </if>
      <else>
        <date variable="issued">
          <date-part name="year"/>
        </date>
      </else>
    </choose>
  </macro>
  <macro name="pages">
    <label form="short" suffix=". " variable="locator" prefix=", " strip-periods="true"/>
    <text variable="page"/>
  </macro>
  <macro name="point-locators">
    <label form="short" suffix=" " variable="locator" prefix=", "/>
    <text variable="locator"/>
  </macro>
  <macro name="point-locators-subsequent">
    <group>
      <choose>
        <if match="none" locator="page">
          <choose>
            <if type="bill book graphic legal_case legislation motion_picture report song" match="any">
              <choose>
                <if variable="volume">
                  <group>
                    <text form="short" suffix=" " text-case="lowercase" term="volume"/>
                    <number form="numeric" variable="volume"/>
                    <label form="short" variable="locator" prefix=", "/>
                  </group>
                </if>
                <else>
                  <label form="short" suffix=" " variable="locator"/>
                </else>
              </choose>
            </if>
          </choose>
        </if>
        <else-if type="bill book graphic legal_case legislation motion_picture report song" match="any">
          <number form="numeric" suffix=":" variable="volume"/>
        </else-if>
      </choose>
      <label form="short" suffix=" " variable="locator"/>
      <text variable="locator"/>
    </group>
  </macro>
  <macro name="hasUrl">
    <choose>
      <if match="any" variable="URL">
        <text value="yes"/>
      </if>
      <else>
        <text value="no"/>
      </else>
    </choose>
  </macro>
  <citation disambiguate-add-year-suffix="true" et-al-use-first="1" et-al-min="3">
    <layout delimiter="/ ">
      <choose>
        <if position="ibid">
          <text term="ibid"/>
          <text prefix=", " macro="point-locators-subsequent"/>
        </if>
        <else>
          <text macro="author-short"/>
          <text suffix=")" prefix=" (" macro="year-date"/>
          <text macro="point-locators"/>
        </else>
      </choose>
      <text value="."/>
    </layout>
  </citation>
  <bibliography et-al-use-first="20" et-al-min="3" hanging-indent="true">
    <sort>
      <key macro="author"/>
      <key variable="source"/>
      <key macro="date"/>
    </sort>
    <layout>
      <group font-weight="normal">
        <text macro="author"/>
        <text suffix="):" prefix=" (" macro="year-date"/>
      </group>
      <text variable="title" prefix=" "/>
      <choose>
        <if type="webpage">
          <text prefix=". " macro="date"/>
        </if>
        <else-if type="speech" match="any">
          <text variable="publisher-place" prefix=", "/>
          <text prefix=", " macro="date"/>
          <text prefix=", " macro="accessed"/>
        </else-if>
        <else-if type="article-newspaper article-magazine article-journal" match="any">
          <text value=", in: "/>
          <text variable="container-title" font-style="italic"/>
          <text variable="collection-title" prefix=", Reihe "/>
          <text variable="volume" prefix=", Band "/>
          <text variable="issue" prefix=", Ausgabe "/>
          <text prefix=", " macro="date"/>
          <text macro="pages"/>
        </else-if>
        <else-if type="chapter" match="any">
          <text macro="editor" prefix=", in: " suffix=": "/>
          <text variable="container-title" font-style="italic"/>
          <text value=", "/>
          <text variable="publisher-place" suffix=", "/>
          <text variable="publisher"/>
          <text macro="pages"/>
        </else-if>
        <else>
          <text value=", "/>
          <text variable="publisher-place" suffix=", "/>
          <text variable="publisher"/>
        </else>
      </choose>
      <choose>
        <if variable="URL">
          <text value="Online: " prefix=", "/>
          <text variable="URL"/>
          <text macro="accessed" prefix=" (Stand: " suffix=")"/>
        </if>
      </choose>
      <text variable="note" prefix=", "/>
      <text value="."/>
    </layout>
  </bibliography>
</style>
